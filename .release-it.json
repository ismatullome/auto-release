{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "tagAnnotation": "Release ${version}",
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {}
        ]
      }
    }
  }
}
